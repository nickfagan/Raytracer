#include "ray.hpp"

Ray::Ray(Point3D origin, Vector3D direction) : mOrigin(origin), mDirection(direction), mFoundIntersection(false) {
  mDirection.normalize();
}

Point3D Ray::getOrigin() {
  return mOrigin;
}

Vector3D Ray::getDirection() {
  return mDirection;
}

Intersection Ray::getIntersection() {
  return mIntersection;
}

bool Ray::foundIntersection() {
  return mFoundIntersection;
}

void Ray::setIntersection(Intersection intersection) {
  mFoundIntersection = true;
  mIntersection = i;
}
